<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.diary.fragments.list.ListFragment"
        android:label="Diary"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_listFragment_to_choiseFragment"
            app:destination="@id/choiseFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.diary.fragments.add.AddFragment"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.diary.fragments.update.UpdateFragment"
        tools:layout="@layout/fragment_update">
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentItem"
            app:argType="com.example.diary.data.models.DiaryEntity" />
    </fragment>
    <fragment
        android:id="@+id/choiseFragment"
        android:name="com.example.diary.fragments.add.ChoiseFragment"
        tools:layout="@layout/fragment_choise">
        <action
            android:id="@+id/action_choiseFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
</navigation>